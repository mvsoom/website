---
import { Image } from "astro:assets";
const { posts } = Astro.props;
---

<ol>
  {
    posts.map((post) => {
      return (
        <li class="cover">
          <a href={`/${post.id}`}>
            <Image
              src={post.data.cover}
              alt={post.data.title}
              title={post.data.title}
            />
          </a>
        </li>
      );
    })
  }
</ol>

<style>
ol li {
  width: 100%;
}

</style>

<div id="data" data-target="ol">
  <script src="./media.js"></script>
</div>
