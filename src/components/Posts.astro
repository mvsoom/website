---
import ResearchPosts from "./Posts/Research.astro";
import MediaPosts from "./Posts/Media.astro";
import VaultPosts from "./Posts/Vault.astro";

const { tag, year, posts } = Astro.props;
---

{
  (() => {
    switch (tag) {
      case "media":
      case "music":
        return <MediaPosts tag={tag} year={year} posts={posts} />;

      case "about":
      case "research":
      case "publications":
        return <ResearchPosts tag={tag} year={year} posts={posts} />;

      default:
        return <VaultPosts tag={tag} year={year} posts={posts} />;
    }
  })()
}