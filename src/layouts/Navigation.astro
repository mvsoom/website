---
import Monospan from "../components/Monospan.astro";

const { selectedTag } = Astro.props;

function selected(s) {
  return selectedTag == s ? "selected" : "";
}
---

<div class="bar">
  <a class={selected("media") + " highlight"} href="/media">
    <Monospan>media</Monospan>
  </a>
  <a class={selected("research") + " highlight"} href="/research">
    <Monospan>research</Monospan>
  </a>
  <a class={selected("vault") + " highlight"} href="/vault">
    <Monospan>vault</Monospan>
  </a>
  <a class={selected("about") + " highlight"} href="/about">
    <Monospan>about</Monospan>
  </a>
</div>

<style>
  .bar {
    padding-bottom: 8px;
    padding-top: 8px;

    /*
    border-top: solid 2px #333;
    border-bottom: solid 4px #333;
    */

    display: flex;
    flex-direction: row;
    flex-wrap: wrap;

    justify-content: space-around;

    line-height: 1;

    /*

    background-color: rgb(255, 255, 255);
    background-image: linear-gradient(
        135deg,
        rgba(0, 0, 0, 0.075) 0%,
        rgba(0, 0, 0, 0.075) 50%,
        transparent 50%,
        transparent 100%
      ),
      linear-gradient(
        45deg,
        transparent 0%,
        transparent 50%,
        rgba(0, 0, 0, 0.075) 50%,
        rgba(0, 0, 0, 0.075) 100%
      );

      */
  }

  a {
    text-decoration: none;
    color: inherit;
    background-color: white;
    padding: 4px;
  }

  a:nth-child(odd) {
    transform: skewX(-5deg);
  }

  a:nth-child(even) {
    transform: skewX(+5deg);
    transform: translateY(-1px);
  }

  .selected {
    font-weight: bold;
    background-color: rgb(255, 255, 0);
  }

  /* https://stackoverflow.com/a/62484130/6783015 */
  .highlight {
    background: linear-gradient(
        104deg,
        rgba(130, 255, 173, 0) 0.9%,
        rgba(130, 255, 173, 1.25) 2.4%,
        rgba(130, 255, 173, 0.5) 5.8%,
        rgba(130, 255, 173, 0.1) 93%,
        rgba(130, 255, 173, 0.7) 96%,
        rgba(130, 255, 1732, 0) 98%
      ),
      linear-gradient(
        183deg,
        rgba(130, 255, 173, 0) 0%,
        rgba(130, 255, 173, 0.3) 7.9%,
        rgba(130, 255, 173, 0) 15%
      );
    padding: 0.6em 13.7px;
    box-decoration-break: clone;
    -webkit-box-decoration-break: clone;
    margin: 0;
    border-radius: 7.5px;
    text-shadow:
      -12px 12px 9.8px rgba(130, 255, 173, 0.7),
      21px -18.1px 7.3px rgba(255, 255, 255, 1),
      -18.1px -27.3px 30px rgba(255, 255, 255, 1);
  }
</style>
