---
import Monospan from "../components/Monospan.astro";

const { selectedTag } = Astro.props;

function selected(s) {
  return selectedTag == s ? "selected" : "";
}
---

<div class="bar">
  <a class={selected("media") + " highlight"} href="/media">
    <Monospan>media</Monospan>
  </a>
  <a class={selected("research") + " highlight"} href="/research">
    <Monospan>research</Monospan>
  </a>
  <a class={selected("vault") + " highlight"} href="/vault">
    <Monospan>vault</Monospan>
  </a>
  <a class={selected("about") + " highlight"} href="/about">
    <Monospan>about</Monospan>
  </a>
</div>

<style>
  .bar {
    padding-bottom: 9px;
    padding-top: 9px;
    
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;

    justify-content: space-evenly;
    gap: 10px;

    line-height: 1;

    background-color: hsl(210, 20%, 99%);
  }

  a {
    text-decoration: none;
    color: inherit;
    padding: 4px;
  }

  a:nth-child(odd) {
    transform: skewX(-5deg);
  }

  a:nth-child(even) {
    transform: skewX(+5deg);
    transform: translateY(-1px);
  }

  .selected {
    font-weight: bolder;
  }

  /* https://stackoverflow.com/a/62484130/6783015 */
 
  /* Base .highlight style for underline effect */
.highlight {
  position: relative;
  display: inline;  /* ensures the underline only spans the text */
  padding-bottom: 0.2em;  /* space for the underline */
}

/* The pseudo-element creates the colored underline */
.highlight::after {
  content: '';
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  height: 0.3em;  /* Adjust this to change the thickness of the underline */
  z-index: -1;
  background-repeat: no-repeat;
  background-size: 100% 100%;
}

/* First menu item – Blue (Media) */
.highlight:nth-child(1)::after {
  background-image: 
    linear-gradient(
      104deg,
      rgba(66, 135, 245, 0) 0.9%,
      rgba(66, 135, 245, 1.25) 2.4%,
      rgba(66, 135, 245, 0.5) 5.8%,
      rgba(66, 135, 245, 0.1) 93%,
      rgba(66, 135, 245, 0.7) 96%,
      rgba(66, 135, 245, 0) 98%
    ),
    linear-gradient(
      183deg,
      rgba(66, 135, 245, 0) 0%,
      rgba(66, 135, 245, 0.3) 7.9%,
      rgba(66, 135, 245, 0) 15%
    );
}

/* Second menu item – Yellow (Research) */
.highlight:nth-child(2)::after {
  background-image: 
    linear-gradient(
      104deg,
      rgba(255, 225, 0, 0) 0.9%,
      rgba(255, 225, 0, 1.25) 2.4%,
      rgba(255, 225, 0, 0.5) 5.8%,
      rgba(255, 225, 0, 0.1) 93%,
      rgba(255, 225, 0, 0.7) 96%,
      rgba(255, 225, 0, 0) 98%
    ),
    linear-gradient(
      183deg,
      rgba(255, 225, 0, 0) 0%,
      rgba(255, 225, 0, 0.3) 7.9%,
      rgba(255, 225, 0, 0) 15%
    );
}

/* Third menu item – Green (Vault) */
.highlight:nth-child(3)::after {
  background-image: 
    linear-gradient(
      104deg,
      rgba(130, 255, 173, 0) 0.9%,
      rgba(130, 255, 173, 1.25) 2.4%,
      rgba(130, 255, 173, 0.5) 5.8%,
      rgba(130, 255, 173, 0.1) 93%,
      rgba(130, 255, 173, 0.7) 96%,
      rgba(130, 255, 173, 0) 98%
    ),
    linear-gradient(
      183deg,
      rgba(130, 255, 173, 0) 0%,
      rgba(130, 255, 173, 0.3) 7.9%,
