---
import "../../styles/global.css";
import { getCollection, render } from "astro:content";

import ScholarIcon from "../../icons/scholar.svg";
import InstagramIcon from "../../icons/instagram.svg";

export async function getStaticPaths() {
  const posts = await getCollection("vault", ({ data }) => {
    return data.publish === true;
  });
  return posts.map((post) => ({
    params: { id: post.id },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await render(post);

const allPosts = await getCollection("vault", ({ data }) => {
  return data.publish === true;
});

const pageTitle = post.data.title ? post.data.title : post.id;
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="format-detection" content="telephone=no" />

    <link
      rel="stylesheet"
      type="text/css"
      media="all"
      href="/butterick/triplicate-heavy.css"
    />
    <link
      rel="stylesheet"
      type="text/css"
      media="all"
      href="/butterick/core-fonts.css"
    />
    <title>
      {pageTitle}
    </title>
  </head>

  <body>
    <div class="container">
      <div class="title">
        <h1>{post.id}</h1>
        <p>{post.data.title}</p>
      </div>

      <div class="content">
        <Content />
      </div>
    </div>

    <div class="nav">
      <div class="container">
        <div class="title" style="font-weight: bold;">
          <h1>media:</h1>
        </div>

        <div class="content">
          <div
            style="display: flex; flex-wrap: wrap; justify-content: space-between;"
          >
            <div style="flex: 1 1 30%;">
              <img src="/matrix.jpeg" alt="Thumbnail 1" style="width: 100%;" />
            </div>
            <div style="flex: 1 1 30%; margin: 5px;">
              <img src="/matrix.jpeg" alt="Thumbnail 2" style="width: 100%;" />
            </div>
            <div style="flex: 1 1 30%; margin: 5px;">
              <img src="/matrix.jpeg" alt="Thumbnail 3" style="width: 100%;" />
            </div>
          </div>
        </div>

        <div class="container">
          <div class="title">
            <h1>research</h1>
          </div>

          <div class="content"></div>
        </div>

        <div class="container" style="font-weight: bold;">
          <div class="title">
            <h1>vault:</h1>
          </div>

          <div class="content">
            <div class="footer" style="justify-content: space-between;">
              {
                allPosts
                  .slice(0, 3)
                  .map((post) => <a href={`/vault/${post.id}`}>{post.id}</a>)
              }
            </div>
          </div>
        </div>

        <div class="container">
          <div class="title">
            <h1>about</h1>
          </div>

          <div class="content">
            <div class="footer">
              <span><a href="/about">me</a></span>
              <span style="margin-right: auto;"><a href="/">homepage</a></span>

              <a href="https://www.instagram.com/marnixvansoom" target="_blank">
                <InstagramIcon
                  viewBox="0 0 132 132"
                  title="Instagram profile"
                />
              </a>

              <a
                href="https://scholar.google.com/citations?user=1yXORK4AAAAJ"
                target="_blank"
              >
                <ScholarIcon
                  viewBox="0 0 512 512"
                  href="https://www.instagram.com/marnixvansoom"
                  title="Google Scholar profile"
                />
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>

    <script src="../../scripts/wrap.js"></script>
  </body>
</html>
