---
import PageLayout from "../layouts/PageLayout.astro";
import PostNavigation from "../components/PostNavigation.astro";

import {
  getPosts,
  sortPostsDescending,
  getPrimaryTag,
  groupByPrimaryTag,
  findNeighbors,
} from "../scripts/posts";
import { render } from "astro:content";

export async function getStaticPaths() {
  const posts = sortPostsDescending(await getPosts());
  const grouped = groupByPrimaryTag(posts);

  return posts.map((post) => {
    const { prev, next } = findNeighbors(post, grouped);
    return {
      params: { id: post.id },
      props: { prev, post, next },
    };
  });
}

const { prev, post, next } = Astro.props;
const { Content } = await render(post);

/* Handle posts with the redirect property */
if (post.data.redirect) {
  return Astro.redirect(post.data.redirect);
}

const primaryTag = getPrimaryTag(post.data.tags!);
---

<PageLayout
  title={post.id}
  subtitle={post.data.title}
  primaryTag={primaryTag}
>
  <Content />

  <PostNavigation prev={prev} next={next} primaryTag={primaryTag}/>
</PageLayout>
