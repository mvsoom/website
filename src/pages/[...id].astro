---
import PageLayout from "../layouts/PageLayout.astro";

import { getSortedPosts, getPrimaryTag } from "../scripts/posts";
import { render } from "astro:content";

export async function getStaticPaths() {
  const posts = await getSortedPosts();

  return posts.map((post) => ({
    params: { id: post.id },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await render(post);
---

<PageLayout title={post.id} subtitle={post.data.title} primaryTag={getPrimaryTag(post.data.tags)}>
  <Content />

  <p style="font-style: italic;">
    Go to <a href="">next post ▤</a> or <a href="">▥ previous post</a> in series.
  </p>

