---
import "../../styles/global.css";
import { getSortedPosts } from "../../scripts/posts";
import { formatDate } from "../../scripts/util";
import type { GetStaticPaths } from "astro";
import BaseLayout from "../../layouts/BaseLayout.astro";
import RedirectedLink from "../../components/RedirectedLink.astro";

export const pageSize = 100000; // TODO

export const getStaticPaths = (async ({ paginate }) => {
  const posts = await getSortedPosts();

  const filteredPosts = posts.filter((post) =>
    post.data.tags?.includes("research")
  );

  return paginate(filteredPosts, { pageSize: pageSize });
}) satisfies GetStaticPaths;

const { page } = Astro.props;

const pageNums = Array.from({ length: page.lastPage }, (_, i) => i + 1);

const pageTitle = "research";
---

<style>
  .content.list ol li {
    margin-bottom: 2em;
  }

  .content.list ol li .date {
    font-size: smaller;
  }
</style>

<BaseLayout pageTitle={pageTitle}>
  <div class="container">
    <div class="title">
      <h1>research</h1>
    </div>

    <div class="content list">
      <ol>
        {
          page.data.map((post) => {
            const { dd, mmm, yyyy } = formatDate(post.data.published);
            return (
              <li>
                <RedirectedLink
                  href={`/vault/${post.id}`}
                  title={post.data.redirect}
                  destination={post.data.redirect}
                >
                  {post.data.title}
                </RedirectedLink>

                <div class="date">
                  {yyyy}
                  <br />
                  {mmm}&#8239;<sup>{dd}</sup>
                </div>
              </li>
            );
          })
        }
      </ol>

      <!-- Pagination controls -->
      {
        page.lastPage > 1 && (
          <nav>
            {page.url.prev && <a href={page.url.prev}>Previous Page</a>}
            {pageNums.map((num) => (
              <a href={`/vault/${num === 1 ? "" : num + "/"}`}>{num}</a>
            ))}
            {page.url.next && <a href={page.url.next}>Next Page</a>}
          </nav>
        )
      }
    </div>
  </div>
</BaseLayout>
